CREATE TABLE TRANSACTION (
    transactionID INT PRIMARY KEY,
    userID INT,
    amount DECIMAL(6,2),
    time TIME,
    refNo VARCHAR(50),
    type VARCHAR(50),
    status VARCHAR(50),
    bankAccountNumber VARCHAR(50),
    accountBranch VARCHAR(255),
    beneficiary VARCHAR(255),
    bank VARCHAR(255),
    FOREIGN KEY (userID) REFERENCES USERS(userID)
);
